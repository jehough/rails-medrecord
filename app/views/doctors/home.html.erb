<h1> Welcome <%= @doctor.doc_name %> </h1>

<h3> Todays Appointments </h3>
<div>
  <% if @today = @doctor.appointments.today %>
    <table>
      <tr>
        <th>Time</th>
        <th>Patient</th>
      </tr>
    <% @today.each do |appt| %>
      <tr>
        <td><%= link_to appt.display_time, edit_appointment_path(appt) %></td>
        <td><%= appt.patient.display_name unless appt.patient.nil? %></td>
      </tr>
    <% end %>
  <% end %>
</div>
<div><%= link_to "Log Out", '/doctor/logout' %></div>
