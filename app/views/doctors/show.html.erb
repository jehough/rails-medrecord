<h1><%= @doctor.doc_name %></h1>

<%if @doctor.profile_pic.attached? %>
  <%= image_tag(@doctor.profile_pic)%>
<% end %>
<h3>Available Appointments</h3>
<ul>
  <% @doctor.appointments.future.available.each do |appt| %>
    <li><%= link_to appt.display_time, appointment_add_patient_path(appt) %></li>
  <% end %>
</ul>
