<h3>Appointment for: <%= @appointment.patient.display_name unless @appointment.patient.nil?%></h3>
<h3>With: <%= @appointment.doctor.doc_name %> on <%= @appointment.display_time %></h3>
<%= form_for @appointment do |f| %>
<table>
  <tr><th colspan="4">Check-in Data</th><tr>
  <tr>
    <td>Height:</td>
    <td><%= f.text_field :height %></td>
    <td>Weight:</td>
    <td><%= f.text_field :weight %></td>
  </tr>
  <tr>
    <td>BMI: </td>
    <td><%= f.text_field :bmi %></td>
    <td>Temperature:</td>
    <td><%= f.text_field :temp %></td>
  </tr>
  <tr>
    <td colspan="2">Blood Pressure:</td>
    <td><%= f.text_field :systolic %> / </td>
    <td><%= f.text_field :diastolic %> </td>
  </tr>
  <tr>
    <td> Heart Rate: </td>
    <td> <%= f.text_field :heart_rate %></td>
    <td> Resperation Rate: </td>
    <td> <%= f.text_field :rr %></td>
  </tr>
  <tr>
    <th colspan="4"> Reason For Visit </th>
  <tr>
    <td colspan="4"><%= f.text_area :visit_reason %></td>
  </tr>
  <tr>
    <th colspan="4"> Past Medical History </th>
  </tr>
  <tr>
    <td colspan="4"> <%= f.text_area :history %> </td>
  </tr>
  <tr>
    <th colspan="4"> Assessment </th>
  </tr>
  <tr>
    <td> Neuro </td>
    <td colspan="3"><%= f.text_area :neuro %></td>
  </tr>
  <tr>
    <td> HEENT </td>
    <td colspan="3"><%= f.text_area :heent %></td>
  </tr>
  <tr>
    <td> Cardiac </td>
    <td colspan="3"><%= f.text_area :cardiac%></td>
  </tr>
  <tr>
    <td>Respiratory</td>
    <td coolspan="3"><%= f.text_area :respiratory%></td>
  </tr>
  <tr>
    <td>Skin</td>
    <td colspan="3"><%= f.text_area :skin%></td>
  </tr>
  <tr>
    <td>Musculoskeletal</td>
    <td colspan="3"><%= f.text_area :musculoskeletal%></td>
  </tr>
  <tr>
    <td>Psychosocial</td>
    <td colspan="3"><%= f.text_area :psychosocial%></td>
  </tr>
  <tr>
    <th colspan="4">Treatment Plan</th>
  </tr>
  <tr>
    <td>Tests Ordered</td>
    <td colspan="4"><%= f.text_area :tests_ordered%></td>
  </tr>
  <tr>
    <td>Therapies</td>
    <td colspan="3"><%= f.text_area :therapies%></td>
  </tr>
  <tr>
    <td>Follow Up Instructions</td>
    <td colspan="3"><%= f.text_area :follow_up%></td>
  </tr>
  <br>
  <%= f.submit "Submit Changes" %>
<% end %>
</table>
